@model VPPShop.Models.LoginViewModel


<div class="container-fluid">
    <div class="row px-xl-5 justify-content-center">
        <div class="col-6">
            <h2 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Đăng nhập</span></h2>
            <div class="bg-light p-30">
                <div class="row">
                    <form asp-controller="Account" asp-action="Login" method="post" class="col-12" enctype="multipart/form-data">
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="col-12">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <div class="alert alert-danger">@error.ErrorMessage</div>
                                }
                            </div>
                        }

                        <div class="col-12 form-group">
                            <label>Email</label>
                            <input asp-for="Email" class="form-control" type="text" placeholder="">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-12 form-group mb-5">
                            <label>Mật khẩu</label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="col-12 form-group">
                            <button class="btn btn-primary w-100 py-2" type="submit">Đăng nhập</button>
                        </div>
                        <h6 class="text-center"><a asp-controller="Account" asp-action="Register">Chưa có tài khoản? Đăng ký</a></h6>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

