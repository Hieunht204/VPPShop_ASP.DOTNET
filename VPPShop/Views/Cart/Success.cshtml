@{
    ViewData["Title"] = "Success";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 text-center">
            <div class="card shadow rounded-4 p-4 border-success border-2">
                <div class="card-body">
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill text-success display-1"></i>
                    </div>
                    <h2 class="text-success fw-bold">Đặt hàng thành công!</h2>
                    <p class="text-muted mt-3">
                        Cảm ơn bạn đã mua sắm tại <strong>VPP Shop</strong>.<br />
                        Đơn hàng của bạn đã được tiếp nhận và đang được xử lý.
                    </p>
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Product")" class="btn btn-outline-success rounded-pill px-4">
                            Tiếp tục mua sắm
                        </a>
                        <a href="@Url.Action("Index", "Invoice")" class="btn btn-success rounded-pill px-4 ms-2">
                            Xem đơn hàng
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
