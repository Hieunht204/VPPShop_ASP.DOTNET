@model List<VPPShop.Entities.Invoice>


<div class="container">

    <h2>Hoá đơn của tôi</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Mã hóa đơn</th>
                <th>Ngày đặt</th>
                <th>Trạng thái</th>
                <th>Phương thức thanh toán</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.InvoiceId</td>
                    <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@order.Status.StatusName</td>
                    <td>@order.PaymentMethod</td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@order.InvoiceId">Chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>